<div class="container mt-5">
  <h2 class="text-center">Cartelera de Cine</h2>

  <hr />

  <div class="table-responsive my-5">
    <h2 class="text-center">Peliculas</h2>
    <br>
    <table class="table table-bordered table-striped table-hover text-center">
      <thead class="thead-dark">
        <tr>
          <th>T√≠tulo</th>
          <th>Descripci√≥n</th>
          <th>Precio</th>
          <th>C√≥digo</th>
          <th>Categor√≠a</th>
          <th>Stock</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.category}}</td>
          <td>{{this.stock}}</td>
          <td><button class="btn btn-info" onclick="addProductToCart('{{../user.cart}}', '{{this._id}}')">Agregar al
              carrito</button></td>
          <td><button class="btn btn-danger" onclick="deleteProduct('{{this._id}}')"> ‚ùå </button></td>
          <td><button class="btn btn-success"
              onclick="window.location.href='/products/realTimeProducts/' + '{{this._id}}'">Actualizar</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <hr />

  <div class="text-center">
    {{#if paginateInfo.hasPrevPage}}
    <a class="btn btn-primary" href="{{paginateInfo.prevLink}}">Anterior</a>
    {{/if}}

    {{#each paginateInfo.totalPages}}
    <a class="btn btn-secondary" href="{{this.link}}">{{this.page}}</a>
    {{/each}}

    {{#if paginateInfo.hasNextPage}}
    <a class="btn btn-primary" href="{{paginateInfo.nextLink}}">Siguiente</a>
    {{/if}}
  </div>
</div>



<script>

  function addProductToCart(cid, pid) {

    fetch(`./api/carts/${cid}/product/${pid}`, {
      method: 'post',
    })
      .then(result => {
        if (!result.ok) {
          throw new Error(`Error: ${result.status} - ${result.statusText}`);
        }
        return result.json();
      })
      .then(result => {
        if (result.status === 'error') {
          throw new Error(result.error);
        } else {
          alert(`¬°Producto agregado al carrito con √©xito!`);
        }
      })
      .catch(err => alert(`Ocurri√≥ un error: ${err}`));
  }

  deleteProduct = (pid) => {
    fetch(`/api/products/${pid}`, {
      method: 'delete'
    })

      .then(result => result.json())
      .then(result => {
        if (result.status === 'error') throw new Error(result.error)
        alert(`El producto se borro de la base de datos!`)
        window.location.href = '/products'
      })
      .catch(err => alert(`Ocurri√≥ un error :(\n${err}`))
  }



  function removeProductFromCart(cid, pid) {
    fetch(`/api/carts/${cid}/product/${pid}`, {
      method: 'delete',  // Utiliza el m√©todo 'delete' para la solicitud de eliminaci√≥n
    })
      .then(result => {
        if (!result.ok) {
          throw new Error(`Error: ${result.status} - ${result.statusText}`);
        }
        return result.json();
      })
      .then(result => {
        if (result.status === 'error') {
          throw new Error(result.error);
        } else {
          alert(`¬°Product removed from cart successfully!`);
        }
      })
      .catch(err => alert(`Ocurri√≥ un error: ${err}`));
  }

</script>



